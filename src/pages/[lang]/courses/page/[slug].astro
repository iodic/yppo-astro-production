---
import CoursesSlugTemplate from "@/templates/pages/CoursesSlugTemplate.astro"
import config from "@/config/config.json"

import { i18nConfig } from "@/i18n/i18nConfig"
import { sanityFetch } from "@/lib/utils/sanityFetch"

export async function getStaticPaths() {
  const { defaultLocale, locales } = i18nConfig
  const posts = await sanityFetch({ type: "course", query: `featured != false && language != '${defaultLocale}'`, pipe: "order(_createdAt desc)" })

  const totalPages = Math.ceil(posts.length / config.settings.pagination)
  const paths: any = []

  locales.map((currentLocale: string) => {
    if (currentLocale !== defaultLocale) {
      for (let i = 1; i < totalPages; i++) {
        paths.push({
          params: {
            lang: currentLocale,
            slug: (i + 1).toString()
          }
        })
      }
    }
  })

  return paths
}

const { slug, lang } = Astro.params
---

<CoursesSlugTemplate slug={slug} lang={lang} />
