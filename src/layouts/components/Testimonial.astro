---
import TestimonialSlider from "@/layouts/function-components/TestimonialSlider";

const { testimonialsData: {cards, textCard: {title, description}} } = Astro.props;
---

<section class="reviews">
  <div class="container">
    <div class="row justify-between">
      <div class="lg:col-6">
        <h2>{title}</h2>
      </div>
      <div class="lg:col-5">
        <p>
          {description}
        </p>
      </div>
    </div>
    <div class="row mt-10">
      <div class="col-12">
        <TestimonialSlider list={cards} client:load />
      </div>
    </div>
  </div>
</section>
