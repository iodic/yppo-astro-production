---
import { Image } from "astro:assets";
import Video from "@/layouts/shortcodes/Video.jsx"

const { banner: { textCard: { title, description }, videoCard: { videoUrl, videoPoster } } } = Astro.props;
---

<section class="section banner relative">
  <div class="container">
    <div class="row items-center">
      <div class="lg:col-6">
        <h1 class="banner-title">{title}</h1>

        <p class="mt-6">{description}</p>

        <!-- TODO: Update button to get data from Sanity -->
        <a class="btn btn-primary mt-8 mb-8 lg:mb-0" href="/conflict-guide">
          Conflict Guide
        </a>
      </div>
      <div class="lg:col-6">
        {
        videoUrl ? (
          <Video
            class="w-full object-contain mx-auto max-w-3xl w-[94%]"
            src={videoUrl}
            width="94%"
            height="auto"
            poster={videoPoster ? videoPoster : undefined}
          />
        ) : (
          <Image
            class="w-full object-contain"
            alt="banner"
            src={videoPoster}
            width={603}
            height={396}
          />
        )}
      </div>
    </div>
  </div>

  <Image
    class="banner-shape absolute -top-28 right-0 -z-[1] w-full max-w-[30%]"
    alt="banner"
    src="/images/banner-shape.png"
    width={496}
    height={466}
  />
</section>
