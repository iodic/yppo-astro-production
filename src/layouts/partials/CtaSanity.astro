---
import { i18nConfig } from "@/i18n/i18nConfig";

const {
  ctaBanner: {title, bannerUrl: {url, urlTitle}}
} = Astro.props;

const { defaultLocale } = i18nConfig;
const currentLanguage  = Astro.currentLocale;
---

<section class="px-5 py-20 xl:py-[120px]">
  <div class="container">
    <div
      class="bg-gradient row justify-center rounded-b-[80px] rounded-t-[20px] px-[30px] pb-[75px] pt-16"
    >
      <div class="lg:col-11">
        <div class="row">
          <div class="lg:col-9">
            <h2 class="h1 text-white">{title}</h2>
            <a
              class="btn btn-white mt-8"
              href={`${currentLanguage == defaultLocale ? '' : `/${currentLanguage}`}${url}`}
              >
              {urlTitle}
            </a>
          </div>
          <div class="mt-8 lg:col-3 lg:mt-0">
            <p class="text-white"></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
